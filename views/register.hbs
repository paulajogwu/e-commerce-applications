        <form  action="/subcustomer" method="POST"  class="customer" id="subcustomer">

            <div class="row" style="margin: auto;">

                <div class="span4">
                    <h4>Your personal information</h4>
                    <div class="control-group">
                        <label class="control-label">Title <sup>*</sup></label>
                        <div class="controls">
                            <select name="title" id="title" class="form-control " style="height: auto;width:250px" required>
                                <option value="">-</option>
                                <option value="Mr">Mr.</option>
                                <option value="Mrs">Mrs</option>
                                <option value="Miss">Miss</option>
                            </select>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputFname1">First name <sup>*</sup></label>
                        <div class="controls">
                            <input type="text" id="first_name" class="form-control " style="height: auto;width:250px" name="first_name" placeholder="First Name" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputLnam">Last name <sup>*</sup></label>
                        <div class="controls">
                            <input type="text" id="last_name" class="form-control " style="height: auto;width:250px" name="last_name" placeholder="Last Name" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="input_email">Email <sup>*</sup></label>
                        <div class="controls">
                            <input type="email" class="form-control " style="height: auto;width:250px" id="email" name="email" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="inputPassword1">Password <sup>*</sup></label>
                        <div class="controls">
                            <input type="password" class="form-control " style="height: auto;width:250px" id="password" name="email" placeholder="Password" required>
                        </div>
                    </div>


                </div>

                <div class="span4">
                    <h4>Your address</h4>

                    <div class="control-group">
                        <label class="control-label" for="address">Address<sup>*</sup></label>
                        <div class="controls">
                            <input type="text" class="form-control " style="height: auto;width:250px" id="address" name="address" placeholder="Adress" required />
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="city">City<sup>*</sup></label>
                        <div class="controls">
                            <input type="text" class="form-control " style="height: auto;width:250px" id="city" name="city" placeholder="city" required />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="state">State<sup>*</sup></label>
                        <div class="controls">
                            <select id="state" name="state" class="form-control " style="height: auto;width:250px" required>
                                <option value="">Select-your-State</option>
                                <option value="Abia">Abia</option>
                                <option value="Adamawa">Adamawa</option>
                                <option value="Akwa-ibom">Akwa-ibom</option>
